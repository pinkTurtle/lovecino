#header .wrap.cubpage
  height: 175px
  #header_title.resources_title
    width: 230px

.site-content 
  .resources_content
    .content_title
      h1
        color: black
    .resources_subcontent.list_view
    .resources_subcontent.grid_view
      .resource_item
        .dl_link
          width: 22px
          height: 28px
          background-image: url('images/sprite.png')
          background-position: -660px -120px
          position: absolute
          bottom: 10px
          right: 12px
          a
            display: block
            width: 100%
            height: 100%

    .resources_subcontent.list_view
      color: $resource_listview_color
      .resource_item
        width: 100%
        height: 175px
        background-color: transparent
        position: relative
        img
          height: 85px
          width: 85px
          position: absolute
          top:40px
          left: 40px
          margin: 1px
        h1
          font: normal 20px $menu
          color: $resource_listview_color
          text-transform: uppercase
          position: absolute
          top: 40px
          left: 165px
          font-weight: bold
          font-size: 16px
          width: 540px
        .resource_desc
          position: absolute
          top: 60px
          left: 165px
          width: 540px
        a.dload
          position: absolute
          bottom: 35px
          right: 40px
          font: normal 10px $menu
        .dl_link
          top: 110px
          left: 165px
          right: auto
          bottom: auto
          &.word
            background-position: -660px -120px
            &:hover
              background-position: -660px -82px

          &.pdf
            background-position: -690px -120px
            &:hover
              background-position: -690px -82px
        p
          width: 140px
          font: normal 14px $menu
          line-height: 28px
          margin-left: 30px
          text-transform: uppercase
          position: absolute
          bottom: 37px
          left: 195px
          margin: 0px
        &:after
          content: " "
          position: absolute
          bottom: 0px
          left: 40px
          height: 6px
          width: 870px
          border-top: 1px solid $resource_listview_color
          border-bottom: 1px solid $resource_listview_color
        &:last-child
          &:after
            display: none

    .resources_subcontent.grid_view
      color: black
      padding: 2px 1px
      .resource_item
        a.dload
          display: none
        height: 236px
        width: 236px
        float: left
        display: block
        overflow: hidden
        position: relative
        margin: 0 3px 3px 0
        background-color: $blue
        div.img_cont
          position: absolute
          top:0px
          left: 0px
          overflow: hidden
          width: 237px
          height: 190px
          img
            height: auto
            width: 100%
        h1
          position: absolute
          bottom: 0px
          left: 0px
          width: 70%
          font: normal 12px $regular
          color: $resource_gridview_h1
          height: 48px
          line-height: 48px
          overflow: hidden
          text-overflow: ellipsis
          white-space: nowrap
          margin: 0px 0px 0px 5%
          a
            color: inherit
          
        .dl_link
          p
            display: none
          &.word
            background-position: -660px -82px
            &:hover
              background-position: -660px -120px

          &.pdf
            background-position: -690px -82px
            &:hover
              background-position: -690px -120px

