.item
  margin: 1px 2px 2px 1px
  position:relative
  overflow: hidden
  float: left
  &.size-2x2
    width: 477px
    height: 477px
    .entry-title
      .timeposted
        font-size: 12px
        font-weight: bold
        span
          color: #bc9e77
        margin-top: 24px
        line-height: 14px
        margin-left: 16px
      h2
        margin: 0px
        line-height: 20px
  &.size-2x1
    width: 477px
    height: 237px
    .entry-title
      height: 50px
      line-height: 50px
      top: 187px
      h2
        margin: 0px
        line-height: 50px
        a
          line-height: 50px
    &:hover
      .hovercontent
        h2 a
          margin: 30px 15px 20px
        p
          margin: 0px 15px
        a.target
          bottom: 15px
  &.size-1x1
    width: 237px
    height: 237px
    .entry-title
      height: 50px
      line-height: 50px
      top: 187px
      h2
        margin: 0px
        line-height: 50px
        a
          line-height: 50px
    &:hover
      .hovercontent
        h2 a
          margin: 30px 15px 20px
        p
          margin: 0px 15px
        a.target
          bottom: 15px
          left: 15px
  a
  img
    display:block
    width:100%
    height:auto
  .entry-title
    position: absolute
    top: 396px
    left:0
    background-color: #012c3f
    height: 80px
    width: 100%
    h2 a
      overflow: hidden
      text-overflow: ellipsis
      width: 74%
      color: #bc9e77
      font: normal 15px $regular
      margin-left: 16px
      white-space: nowrap
    &:after
      content:" "
      width: 42px
      height: 35px
      background-image: url('images/sprite.png')
      position: absolute
      top: 50%
      margin-top: -17px
      right: 0px
      z-index: 20

  .hovercontent
    display:none
  &:hover
    .hovercontent
      display:block
      position:absolute
      top:0
      left:0
      width:100%
      height:100%
      ul.social-menu
        background-color: rgba(0,0,0,0.3)
        margin: 0px
        height: 30px
        width: 100%
        h5
          float: left;
          height: 100%
          text-transform: uppercase
          font-size: 12px
          font-weight: bold
          line-height: 30px
          padding-left: 15px
          color: white
        li
          a
            width: 30px
            height: 30px
            float: right
            text-indent: -99999px
            background-image: url('images/sprite.png')
            margin-left: 1px
            span
              display: none
            &.social-fb
              background-position: -504px 0px
              &:hover
                background-position: -504px -33px
            &.social-tw
              background-position: -535px 0px
              &:hover
                background-position: -535px -33px
            &.social-pt
              background-position: -566px 0px
              &:hover
                background-position: -566px -33px
            &.social-gt
              background-position: -597px 0px
              &:hover
                background-position: -597px -33px
      h2
        a
          font: bold 14px $regular
          color: white
          margin: 40px 40px 35px
          width: auto
      p
        margin: 0px 40px
        color: white
      a.target
        position: absolute
        bottom: 50px
        left: 50px
        span
          font-weight: bold
          text-transform: uppercase
  &.cubhub
    .entry-title
      &:after
        background-position: -330px -217px
    &:hover
      .hovercontent
        background-color: $item_cubhub_hobg
        p
        h2
        h2 a
          color: #012c3f
    span.flag2
      background-position: -638px -26px
      color: $yellow
      &:hover
        background-position: -638px 0px
        color: $blue

  &.instagram
    .entry-title
      &:after
        background-position: -478px -217px
    &:hover
      .hovercontent
        background-color: $item_instagram_hobg
  &.facebook
    .entry-title
      &:after
        background-position: -523px -217px
    &:hover
      .hovercontent
        background-color: $item_facebook_hobg
  &.youtube
    .entry-title
      &:after
        background-position: -431px -217px
    &:hover
      .hovercontent
        background-color: $item_youtube_hobg
  &.pinterest
    .entry-title
      &:after
        background-position: -382px -217px
    &:hover
      .hovercontent
        background-color: $item_pinterest_hobg
  &.twitter
    .entry-title
      &:after
        background-position: -567px -217px
    &:hover
      .hovercontent
        background-color: $item_twitter_hobg

.item.opened-item
  overflow: visible
  height: auto
  .entry-title
    h2
    .timeposted
      display: none
    background-color: transparent
  .full-description
    background-color: white
    position: relative
    z-index: 5
    padding: 20px
    .timeposted
      a
        text-decoration: none
    h1
      font-size: 44px
    a
      text-decoration: underline
      display: inline
    a.fulldesc-button
      text-decoration: none
      span
        font-size: 11px
        line-height: 26px
        font-weight: bold
    hr
      height: 7px
      border-top: 1px solid $text_color
      border-bottom: 1px solid $text_color
    div.comment
      font: normal 49px/49px $title
      text-align: center
      margin: 0px auto
      width: 160px
      position: relative
      text-shadow: white -2px 2px, $text_color -3px 3px
      &:before
      &:after
        content: " "
        width: 135px
        position: absolute
        top: 16px
        border-top: 1px solid $text_color
        border-bottom: 1px solid $text_color
        height: 4px
      &:before
        left: -140px
      &:after
        right: -140px

    div.social-menu.addthis_toolbox
      a
        width: 55px
        &.addthis_native_counter_sibling
          width: 20px
        &.addthis_button_pinterest
          width: 40px
    div.commentwrap
      margin-top: 40px

  &:hover
    .hovercontent
      display: none

