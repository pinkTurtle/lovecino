ul#filters_resources
  margin: 4px 0px
  float: left
  width: 285px
  li.filterresources_item
    margin: 6px 0px
    width: 87px
    height: 46px
    box-shadow: 0px 1px 1px #000
    float: left
    background-image: url('images/bg-brown.jpg')
    &.current
    &:hover
      background-color: rgba(0,0,0,0.3)
      background-image: none
    a
      display: block
      height: 46px
      line-height: 46px
      text-align: center
      color: $yellow
      font-size: 18px
      width: 100%
      height: 100%
      &:hover
        color: #3b5570
    &.manuals
      border: 3px solid #FFdd33
      border-right: none
      border-radius: 30px 0px 0px 30px
      background-position: -191px $x
      &:hover
      &.current
        background-position: -191px ( $x - 48px )
        border-color:#3b5570
    &.forms
      border: 3px solid #FFdd33
      border-left: none
      border-right: none
      background-position: -50px $x
      &:hover
      &.current
        background-position: -50px ( $x - 48px )
        border-color:#3b5570
    &.misc
      border: 3px solid #FFdd33
      border-left: none
      border-radius: 0px 30px 30px 0px
      background-position: -50px $x
      &:hover
      &.current
        background-position: -50px ( $x - 48px )
        border-color:#3b5570


