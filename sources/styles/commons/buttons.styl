$x = -74px
ul#filters_social
  margin: 6px 0px
  float: left
  width: 260px
  li.filtersocial_item
    margin: 5px 2px
    width: 41px
    height: 41px
    border: 3px solid #FFdd33
    border-radius: 30px
    box-shadow: 0px 1px 1px #000
    float: left
    background-image: url('images/sprite.png')
    &:hover
    &.current
      border-color:#3b5570
    a
      text-indent: -9999px
      display: block
      width: 100%
      height: 100%
    &.cubhub
      display:none
    &.facebook
      background-position: -3px $x
      &:hover
      &.current
        background-position: -3px ( $x - 48px )
    &.twitter
      background-position: -144px $x
      &:hover
      &.current
        background-position: -144px ( $x - 48px )
    &.pinterest
      background-position: -97px $x
      &:hover
      &.current
        background-position: -97px ( $x - 48px )
    &.instagram
      background-position: -191px $x
      &:hover
      &.current
        background-position: -191px ( $x - 48px )
    &.youtube
      background-position: -50px $x
      &:hover
      &.current
        background-position: -50px ( $x - 48px )

